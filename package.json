{
  "name": "dskd",
  "description": "ウェブ制作にまつわる雑記を主としたウェブログです。2010年12月より公開。",
  "version": "7.0.3",
  "license": "CC BY-NC",
  "author": "oti",
  "keywords": [
    "dskd",
    "blog",
    "oti",
    "css",
    "html",
    "js"
  ],
  "scripts": {
    "start": "gulp",
    "server": "gulp server",
    "html": "gulp html",
    "md": "gulp md",
    "build": "gulp build",
    "lint-html": "markuplint dist/**/*.html --ruleset ./markuplintrc",
    "lint-css": "stylelint dist/css/*.css",
    "html-validator": "html-validator --file=dist/index.html --verbose",
    "test": "npm run lint-html & npm run html-validator & npm run lint-css"
  },
  "devDependencies": {
    "@prettier/plugin-pug": "^1.5.0",
    "autoprefixer": "^9.8.6",
    "browser-sync": "^2.26.12",
    "commitizen": "^4.1.2",
    "css-mqpacker": "^7.0.0",
    "csswring": "^7.0.0",
    "cz-customizable": "^6.3.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^4.1.0",
    "gulp-front-matter": "^2.0.0-7",
    "gulp-imagemin": "^5.0.3",
    "gulp-layout": "0.0.4",
    "gulp-markdown": "^5.1.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "gulp-prettify": "^0.5.0",
    "gulp-rename": "^1.4.0",
    "gulp-sass": "^3.2.1",
    "html-validator-cli": "^7.0.0",
    "husky": "^4.2.5",
    "json-pretty": "0.0.1",
    "list-stream": "^1.0.1",
    "markuplint": "^1.0.0-alpha.54",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "pug": "^3.0.0",
    "stylelint": "^13.6.1",
    "stylelint-config-recommended": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./.cz-config.js"
    }
  }
}
