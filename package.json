    "gulp-changed": "^4.0.3",
    "gulp-front-matter": "^2.0.0-7",
    "gulp-imagemin": "^8.0.0",
    "gulp-layout": "0.0.4",
    "gulp-markdown": "^6.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^9.0.1",
    "gulp-prettify": "^0.5.0",
    "gulp-rename": "^2.0.0",
    "html-validator-cli": "^7.0.1",
    "husky": "^7.0.4",
    "json-pretty": "0.0.1",
    "list-stream": "^2.1.0",
