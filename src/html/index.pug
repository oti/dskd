extends default

block contents
  -
    const heading = INDEX ? '最近の記事' : page_description
    const posts = INDEX
        ? archives.slice(0,5) //- indexでは5件出力だけ出力する
        : ARCHIVES
          ? archives
          : TAG
            ? tags[page_title]
            : YEAR
              ? years[page_title]
              : []

  section.Border
    h2(class=INDEX ? "Invisible" : "Primary")= heading
    ul.Posts
      each post in posts
        li
          a(href=`${archives_base}${posts_base}${post.page_id}.html`)= post.page_title
          +publish(post.page_datetime, post.page_tag, page_title)

    if INDEX
      p.More
        a(href=`${archives_base}${posts_base}`) 全ての記事

  section.Border
    h2.Secondary 年別
    ol.Pages(reversed)
      each year, i in Object.keys(years).sort((a, b) => b.localeCompare(a))
        li
          a(
            class=page_title === Number(year) && "-current",
            href=`${archives_base}${years_base}${year}.html`,
            aria-current=page_title === Number(year) && "page"
          )= year

  section.Border
    h2.Secondary タグ別
    ul.Pages
      each tag, i in Object.keys(tags).sort((a, b) => a.localeCompare(b))
        li
          a(
            class=page_title === tag && "-current",
            href=`${archives_base}${tags_base}${tag.toLowerCase().replace(/[ .-]/g, '_')}.html`,
            aria-current=page_title === tag && "page"
          )= tag
