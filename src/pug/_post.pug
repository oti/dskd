//- _post.pug
//- 個別記事用テンプレート
extends default
- page_permalink = blog_url+archives_base+page_id+'.html'
//-
block contents
  article.post
    footer.post__footer
      +timestamp(page_datetime)
      +tag(page_tag, page_type)

    h1.post__title(itemprop='name')=page_title

    div.post__body(itemprop='articleBody')
      != contents

    +contribute(post_contribute, page_id)

    +social(page_title, page_permalink)

  +neighbor(neighbors, page_id, archives_base)
