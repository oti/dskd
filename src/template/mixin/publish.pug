mixin publish(time, tags, title)
  - const pubdate = time.split("T")[0];
  dl.Publish
    dt.Invisible 公開日
    dd
      time(datetime=`${time}+09:00`)= pubdate
    dt.Invisible タグ
    each tag in tags
      if title === tag
        dd= tag
      else
        dd
          a(href=`${U_TAG}${tag.toLowerCase().replace(/[ .-]/g, '_')}.html`)= tag
